<?php namespace Barryvdh\TranslationManager\Console;

use Barryvdh\TranslationManager\Manager;
use Illuminate\Console\Command;
use Symfony\Component\Console\Input\InputArgument;

class ExportAllCommand extends Command {

    /**
     * The console command name.
     *
     * @var string
     */
    protected $name = 'translations:export-all';

    /**
     * The console command description.
     *
     * @var string
     */
    protected $description = 'Export all translations to PHP files';

    /** @var \Barryvdh\TranslationManager\Manager  */
    protected $manager;

    public function __construct(Manager $manager)
    {
        $this->manager = $manager;
        parent::__construct();
    }

    /**
     * Execute the console command.
     *
     * @return void
     */
    public function fire()
    {
        $this->manager->exportAllTranslations();

        $this->info("Done writing language files for all groups");

    }

    /**
     * Get the console command arguments.
     *
     * @return array
     */
    protected function getArguments()
    {
        return array();
    }




}
